{% extends 'base.html.twig' %}

{% block body %}
    <h1>Location</h1>

    <table class="table table-bordered">
        <tbody>

            <tr>
                <th>Date de debut</th>
                <td>{% if location.dateDeDebut %}{{ location.dateDeDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{% if location.dateDeFin %}{{ location.dateDeFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cin de client </th>
                <td>{{ location.client.cin }}</td>
            </tr>
            <tr>
                <th>Immatricule de voiture </th>
                <td>{{ location.voiture.imatricule }}</td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('location_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('location_edit', { 'id': location.id }) }}" class="btn btn-primary">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
